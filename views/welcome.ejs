<%- include('./partials/home_nav.ejs')%>

<div class="container mt-5 mb-5" style="max-width: 1200px;">
  <div class="row">

    <!-- Paginated Posts Column -->
    <div class="col-md-8">
      <!-- Display paginated posts -->
      <% if(paginatedPosts.length > 0) { %>
        <% paginatedPosts.forEach(post => { %>
          <div class="container mt-5 mb-5">
            <div class="row">
              <div class="col-md-10">
                <div class="card">
                  <div class="d-flex justify-content-between p-2 px-3">
                    <div class="d-flex flex-row align-items-center"> 
                      <% if (post.user && post.user.image) { %>
                        <img src='<%= post.user.image %>' width="50" height="50" class="rounded-circle" alt="">
                      <% } else { %>
                        <img src='https://bootdey.com/img/Content/avatar/avatar7.png' width="50" height="50" class="rounded-circle" alt="">
                      <% } %>
                      <div class="d-flex flex-column ml-2"> 
                        <span class="font-weight-bold">
                          <% if (post.user && post.user.name) { %>
                            <%= post.user.name %>
                          <% } else { %>
                            Unknown User
                          <% } %>
                        </span> 
                        <small class="text-primary">Student</small> 
                      </div>
                    </div>
                    <div class="d-flex flex-row mt-1 ellipsis"> 
                      <small class="mr-2">
                        <span class="post-time" data-timestamp="<%= post.date %>">
                          <%= post.date.toDateString() %>
                        </span>
                      </small>
                    </div>
                  </div>
                  <div class="p-2">
                    <% if (post.desc && post.desc.length && post.desc.length <= 200) { %>
                      <p class="text-justify"><%= post.desc %></p>
                      <button class="see-more-button"><a href="/eachPost/<%= post._id %>">See Details</a></button>
                    <% } else if (post.desc && post.desc.length) { %>
                      <p class="text-justify" data-desc="<%= post.desc %>"><%= post.desc.slice(0, 200) %></p>
                      <button class="see-more-button"><a href="/eachPost/<%= post._id %>">See Details</a></button>
                    <% } else { %>
                      <p class="text-justify">No description available</p>
                      <!-- You might want to add a default behavior here -->
                    <% } %>
                    <hr>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>

        <!-- Pagination Links -->
        <div class="pagination mt-3 d-flex justify-content-center">
          <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>" class="page-link">Previous</a>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="?page=<%= i %>" class="page-link <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>" class="page-link">Next</a>
          <% } %>
        </div>
      <% } else { %>
        <p class="post-content">There is nothing to show</p>
      <% } %>
    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4 order-1 order-md-2">
      <!-- Search Widget -->
      <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>

     <!-- Categories Widget -->
<div class="card my-4">
  <h5 class="card-header">Categories</h5>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <ul class="list-unstyled mb-0">
          {{#each categories}}
            <li>
              <a href="#" class="category-link" data-category="{{title}}">{{title}}</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>



</div>

</div>
<!-- /.row -->

</div>

